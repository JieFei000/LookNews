/* components/lists/lists.wxss */
.list{
  width: 100vw;
  height: 33vw;
  margin-top: 3vw;
  background-color: #FFF;
}
.list:nth-child(7n){
  height: 60vw;
  position: relative;
}

.list_left{
  float: left;
  padding: 3vw;
}
.list_right{
  float: right;
}
.list_left,.list_right{
  height: 33vw;
  width: 50vw;
  box-sizing: border-box;
}
.list_top{
  width: 100vw;
  height: 60vw;
}
.list_bottom{
  color: #FFF;
  background-color: #000;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 1vw 5vw;
  box-sizing: border-box;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.title{
  font-size: 5vw;
  line-height: 7vw;
  height: 14vw;
  overflow: hidden;
  letter-spacing: .5vw;
}
.from{
  color: #666;
  margin-top: 6vw;
  font-size: 4vw;
}
.list_img{
  width: 100%;
  height: 33vw;
}
.list_7_img{
  width: 100%;
  height: 60vw;
}
.lists{
  padding-bottom: 30vw;
}